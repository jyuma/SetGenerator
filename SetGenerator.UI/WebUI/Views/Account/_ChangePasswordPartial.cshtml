@using Microsoft.AspNet.Identity
@model SetGenerator.WebUI.Models.ManageUserViewModel

<script>
    $(document).ready(function() {
        $("#OldPassword").focus();
    });
</script>

<p>You're logged in as <strong>@User.Identity.GetUserName()</strong>.</p>

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <section class="login-form">
        @Html.AntiForgeryToken()
        <h4>Change Password Form</h4>
        <hr />
        @Html.ValidationSummary()
        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(m => m.OldPassword, new { @class = "label label-default" })
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control username" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(m => m.NewPassword, new { @class = "label label-default" })
                @Html.PasswordFor(m => m.NewPassword, new {@class = "form-control username"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "label label-default" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control username" })
            </div>
        </div>

        <div class="form-group">
            <div class="">
                <div class="col-md-offset-2 col-md-1 pull-left">
                    <input type="submit" value="Change Password" class="btn btn-primary" />
                </div>
                <div class="col-md-1">
                    <a class="btn btn-default" href='@Url.Action("Index", "Home")'>Cancel</a>
                </div>
            </div>
        </div>
    </section>
}
