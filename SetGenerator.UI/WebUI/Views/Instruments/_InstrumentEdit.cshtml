@model SetGenerator.WebUI.ViewModels.InstrumentEditViewModel

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="label label-default">Name</div>
            <input type="text" id="txtName" class="form-control" value="@Model.Name" maxlength="50"/>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <div class="label label-default">Abbrev</div>
            <input type="text" id="txtAbbreviation" class="form-control" value="@Model.Abbreviation" maxlength="3" />
        </div>
    </div>
    <div class="validation-container" id="validation-container"></div>
</div>