@model SetGenerator.WebUI.ViewModels.SetViewModel

@if (!Request.IsAuthenticated)
{
    Url.Action("Index", "Home");
}

@{
    ViewBag.Title = "Manage Sets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        setlists.sets.init({ setlistId: parseInt(@Model.SetlistId) });
    });
</script>

<div class="panel panel-default">
    <div class="panel-heading" style="padding-bottom: 1px">
        <ul class="nav nav-pills">
            <li>
                <h3>View Sets for <i>@Model.Name</i></h3>
                <a style="padding: 5px 0 0 0" href="#" onclick="location.href = '@Url.Action("Index", "Setlists", new {@id = @Model.SetlistId})'">Back To List</a>
            </li>
            <li class="navbar-right">
                <div class="pad-right">
                    <button class="btn btn-info" data-bind="click: showPrintDialog">Download PDF</button>
                </div>
            </li>
        </ul>
    </div>
    <div class="panel-body">
        <ul class="nav nav-pills">
            <!-- ko foreach: setNumberList -->
            <li><button class="btn btn-success" data-bind="text: 'Set ' + setnumber, value: $parent.selectedSetNumber(), click: $parent.showSet, attr: { id: 'set_' + setnumber }"></button></li>
            <!-- /ko -->
            <li><button class="btn btn-warning" data-bind="text: 'Spares', value: selectedSetNumber(), click: showSet "></button></li>
            <li class="record-total-sets"><label>Total:</label><span data-bind="text: totalSongs(), style: { 'padding-left': '5px' }"></span></li>
            <li class="navbar-right pad-right">
                <div id="ddlColumns" class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="btnShowHideColumns" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Show Columns
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="btnShowHideColumns" data-bind="foreach: columns">
                        <li data-bind="if: !alwaysVisible">
                            <div>
                                <input type="checkbox" data-bind="checked: isVisible, attr: { id: 'chk_' + dataMember }" /> <label for="" data-bind="text: title"></label>
                            </div>
                        </li>
                    </ul>
                </div>
            </li>
        </ul>

        <table class="table table-bordered" id="tblSetSong">
            <thead>
                <tr>
                    <th class="col-glyphicon"></th>
                    <!-- ko foreach: columns -->
                    <!-- ko if: !isMemberColumn -->
                    <th data-bind="style: { cursor: 'default' }, visible: isVisible, click: $parent.sort, attr: { id: 'song-col-' + dataMember }"><span data-bind="text: title"></span></th>
                    <!-- /ko -->
                    <!-- ko if: isMemberColumn > 0 -->
                    <th class="column-member" data-bind="visible: isVisible, click: $parent.sort"><span data-bind="text: title"></span></th>
                    <!-- /ko -->
                    <!-- /ko -->
                </tr>
            </thead>

            <tbody data-bind="foreach: setSongs">
                <tr data-bind="attr: {id: 'row_' +  setnumber + '_' + id }, event: { mouseup: function(data, event) { $parent.setNewSongOrder(setnumber, data, event) } }">
                    <td><a class="glyphicon glyphicon-share-alt" href="#" data-bind="click: $parent.showMoveSongDialog"></a></td>
                    <!-- ko foreach: $parent.columns -->
                    <td data-bind="style: { cursor: $parent.setnumber > 0 ? 'move' : 'default' }, text: $parent[dataMember], visible: isVisible"></td>
                    <!-- /ko -->
                    <!-- ko foreach: memberInstruments -->
                    <td data-bind="text: instrument, visible: isVisible"></td>
                    <!-- /ko -->
                </tr>
            </tbody>
        </table>
    </div>
</div>
